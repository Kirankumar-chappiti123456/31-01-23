#include<stdio.h>
#include<string.h>
int main()
{
    int a[]={1,2,1};
    int l=sizeof(a)/sizeof(a[0]),i=0,c=0;
   for(i=0;i<l;i++)
   {
       if(a[i]!=a[l-i-1])
      
           c++;
           break;
      
   }
   (c)?printf(" not palindrome"):printf("palndrome");
}


#include<stdio.h>
#include<string.h>
int main()
{
    char a[]="mam";
    int l=strlen(a),i=0,c=0;
   for(i=0;i<l;i++)
   {
       if(a[i]!=a[l-i-1])
      
           c++;
           break;
      
   }
   (c)?printf(" not palindrome"):printf("palndrome");
}
